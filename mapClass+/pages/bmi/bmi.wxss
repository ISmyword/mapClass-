/**index.wxss**/
.container2 {
  height: 100%;
  /* display: flex; */
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 0;
  box-sizing: border-box;
  overflow: hidden;
} 
.head{
  position: relative;
  width: 100%;
  height: 90rpx;
  background-color: #ffffff;
}
.head-back{
  position: absolute;
  width: 45rpx;
  height: 45rpx;
  margin: 25rpx 25rpx;
  z-index: 2;

}
.head-title {
  float: left;
  width: 670rpx;
  height: 85rpx;
  line-height: 85rpx;
  margin-left: 80rpx;
  text-align: left;
  color: #ffffff;
  font-size: 35rpx;
}
.con-view{
   position: relative;
}
.con-top{
  position: relative;
  width: 750rpx;
  height: 500rpx;
  color: #ffffff;
}
.con-top image{
  width: 100%;
  height: 100%;
}
.con-top .title{
  position: absolute;
  font-size: 50rpx;
  font-weight: 550;
  top: 70rpx;
  left: 30rpx;
}
.con-top .des{
  position: absolute;
  width: 450rpx;
  line-height: 38rpx;
  font-size: 26rpx;
  top: 176rpx;
  left: 30rpx;
  color: #ffffff;
}
.con-top .des view{
  text-indent: 52rpx;
}
.con-work{
  position: absolute;
  width: 690rpx;
  margin: -64rpx 30rpx 0;
  background: #ffffff;
  border-radius: 30rpx 30rpx 0 0;
  box-shadow: 0px 1px 3px #e9e8e8;
  z-index: 999;

}

.c-li{
  width: 571rpx;
  margin: 70rpx 58rpx;
  overflow: hidden;
}
.c-label{

}
.c-label image{
  width: 22rpx;
  height: 22rpx;
}
.c-label text{
  margin-left: 10rpx;
  font-size: 30rpx;
  font-weight: 550;
  color: #0a0a0a;
}
.c-input {
  position: relative;
  margin-top: 25rpx;
}
.c-input input{
  width: 533rpx;
  height: 84rpx;
  padding-left: 38rpx;
  font-size: 26rpx;
  background: #eaeaea;
  color: #0a0a0a;

}
.phcolor{
  color: #afacac;
}
.company{
  position: absolute;
  top: 25rpx;
  right: 38rpx;
  font-size: 26rpx;
  color: #363636;
}
.button{
  position: absolute;
  width: 610rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 0rpx -305rpx 0;
  font-size: 30rpx;
  border-radius: 21rpx;
  background: #2f81ff;
  color: #ffffff;
  bottom: 155rpx;
  left: 50%;
}
.button2{
  bottom: 140rpx;
}
.c-ps{
  position: absolute;
  width: 660rpx;
  color: #a1a1a1;
  text-align: center;
  font-size: 26rpx;
  bottom: 103rpx;
}
.c-li-2{
  width: 690rpx;
  margin: 70rpx 0rpx 40rpx;
  overflow: hidden;
}
.c-li-dl{
  float: left;
  width: 33.3%;
  text-align: center;

}
.c-li-dl .title{
  font-size: 30rpx;
  color: #0b0b0b;
  font-weight: 550;
}
.c-li-dl .des{
  font-size: 26rpx;
  color: #333333;
}
.proposal{
  width: 690rpx;
  min-height: 186rpx;
  background: #ffe591;
  margin:0; 
}
.des{
  font-size: 26rpx;
  color: #333333;
}
.p-li{
  margin-top: 30rpx;
  float: none;
}
.p-li .des{
  padding: 0 60rpx 30rpx 60rpx;
  display: block;
  margin-top: -19rpx;
}
.info{
  width: 690rpx;
  height: 178rpx;
  background: #f0f0f0;
  margin: 5rpx 0 0; 
  padding-top: 8rpx;

}
.i-li{
  width: 570rpx;
  margin: 22rpx auto 0;
  float: none;
  font-size: 26rpx;
  overflow: hidden;
  font-weight: 400;
}
.i-li .title{
  float: left;
  font-size: 26rpx;
  color: #999999;
}
.i-li .des{
  float: right;
  color: #999999;

}
.con-work-box{
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 999;
  background: #ffffff;
}
.loading{
  position: absolute;
  width: 130rpx;
  height: 130rpx;
  top:50%;
  left: 50%;
  margin: -65rpx 0 0 -65rpx;

}
.loading image{
  width: 100%;
  height: 100%;
}